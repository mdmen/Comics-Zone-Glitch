{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@/test-utils": ["../tests/utils.ts"]
    }
  },
  "include": ["src/**/*", "src/tests/setup.ts"],
  "exclude": ["node_modules"]
}
